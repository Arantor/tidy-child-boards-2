<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Arantor:Tidy_Child_Boards</id>
	<name>Tidy Child Boards</name>
	<version>2.0</version>
	<type>modification</type>

	<install for="2.0.0-2.0.99">
		<modification type="file">install.xml</modification>
		<require-file name="tidychildboards2.css" destination="$themes_dir/default/css" />
		<require-dir name="tidychildboards" destination="$themes_dir/default/languages" />
	</install>

	<uninstall for="2.0.0-2.0.99">
		<modification type="file" reverse="true">install.xml</modification>
		<remove-file name="$themes_dir/default/css/tidychildboards2.css" />
		<remove-dir name="$themes_dir/default/languages/tidychildboards" />
	</uninstall>
</package-info>